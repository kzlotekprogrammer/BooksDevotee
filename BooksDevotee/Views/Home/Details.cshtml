@model Book

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-5">
        <div class="card m-1">
            <img class="p-3" src="~/images/noimage.png" />
        </div>
    </div>

    <div class="col-md-7">
        <div class="row">
            <div class="col-12"><h3>@Model.Title</h3></div>
        </div>
        <div class="row">
            <div class="col-md-4">Autor</div>
            <div class="col-md-8">@Model.Author</div>
        </div>
        <div class="row">
            <div class="col-md-4">Kategorie</div>
            <div class="col-md-8">
                @foreach (BookCategory bookCategory in Model.BookCategories)
                {
                    <div class="row">
                        <div class="col-md-12">@bookCategory.Category.CategoryName</div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">Typ okładki</div>
            <div class="col-md-8">@Model.CoverType</div>
        </div>
        <div class="row">
            <div class="col-md-4">Wydawca</div>
            <div class="col-md-8">@Model.Publisher</div>
        </div>
        <div class="row">
            <div class="col-md-4">Wymiary</div>
            <div class="col-md-8">@Model.Dimensions</div>
        </div>
        <div class="row">
            <div class="col-md-4">Ilość stron</div>
            <div class="col-md-8">@Model.Pages</div>
        </div>
        <div class="row">
            <div class="col-md-4">Data wydania</div>
            <div class="col-md-8">@Model.ReleaseDate</div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <h3>Opis</h3>
        @Model.Description
    </div>
</div>